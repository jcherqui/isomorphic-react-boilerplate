{
  "extends": "airbnb",
  "rules": {
      "indent": ["error", 4],
      "max-len": [2, {"code": 120, "tabWidth": 4, "ignoreUrls": true}],
      "func-names": [0],
      "arrow-body-style": [0],
      "no-param-reassign": [0],
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": [2, 4],
      "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],
      "import/no-extraneous-dependencies": [0]
  },
  "env": {
      "browser": true,
      "mocha": true
  }
}
